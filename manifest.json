{
  "name": "99acres Uploader",
  "description": "Upload Ad to 99acres.com",
  "version": "3.0",
  "manifest_version": 3,
  "options_page": "99acres/html/options.html",
  "permissions": [
    "storage",
    "tabs",
    "declarativeContent",
    "activeTab",
    "scripting",
    "*://*.99acres.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.99acres.com/*"],
      "js": ["/99acres/js/content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "48": "48.png",
      "128": "128.png",
      "512": "512.png"
    }
  },
  "background": {
    "service_worker": "/99acres/js/content.js"
  },
  "icons": {
    "48": "48.png",
    "128": "128.png",
    "512": "512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/99acres/js/search.js",
        "/99acres/js/jquery.min.js",
        "/99acres/js/jszip.js",
        "/99acres/js/xlsx.js",
        "/99acres/js/xlsx.full.min.js",
        "/99acres/css/style.css"
      ],
      "matches": ["*://*.99acres.com/*"]
    }
  ]
}
